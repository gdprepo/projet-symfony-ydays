{% extends 'baseDash.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for message in app.flashes('remove') %}
			<div class="p-3 my-2 rounded-2 success">
				{{ message }}
			</div>
		{% endfor %}
		<h1 style="text-align:center">List des pronos ! âœ…</h1>

		<div style="background-color: white; margin-top: 50px" class="responsive-table">
			<table class="table bordered">
				<thead>
					<tr>
						<th>Equip1</th>
						<th>Equip2</th>
						<th>Confiance</th>
						<th>Date</th>
						<th>Victoire</th>
						<th>Action(s)</th>
						<th></th>

					</tr>
				</thead>
				<tbody>
					{% for prono in pronos %}
						<tr>
							<td>{{ prono.getEquip1 }}</td>
							<td>{{ prono.getEquip2 }}</td>
							<td>{{ prono.getConfiance }}</td>
							<td>{{ prono.getDate().format('Y-m-d H:i:s') }}</td>
							<td>{{ prono.getEquip1 }}</td>
							<td>
								<form method="POST" action="{{ path('prono_delete', { id: prono.id }) }}">
									<button class="btn shadow-1 primary rounded-4">Supprimer</button>
								</form>
							</td>
							<td>
								<a href="{{ path('prono_edit', { id: prono.id }) }}">
    								<button class="btn shadow-1 primary rounded-4">Modifer</button>
                                </a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>


	</div>
{% endblock %}
