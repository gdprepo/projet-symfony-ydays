{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>

    $(function() {
        $(".pay").hide();
        $(".back").hide();

        $(".back").click(function () {
            $(".form1").show();
            $(".form2").show();
            $(".form3").show();
            $(".pay").hide();
            $(".back").hide();

        });

        $(".select1").click(function () {
            $(".form2").hide();
            $(".form3").hide();
            $(".pay").show();
            $(".back").show();

        });

        $(".select2").click(function () {
            $(".form1").hide();
            $(".form3").hide();
            $(".pay").show();
            $(".back").show();
        });

        $(".select3").click(function () {
            $(".form1").hide();
            $(".form2").hide();
            $(".pay").show();
            $(".back").show();
        });
    })
	</script>


